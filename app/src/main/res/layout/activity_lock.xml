<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ditrol.tugasakhir.LockActivity">
    <TextView
        android:id="@+id/status_hidup_motor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:textStyle="bold"
        android:text="tes"
        android:textSize="20sp"
        android:layout_marginTop="50dp" />
    <LinearLayout
        android:id="@+id/kotak_konfirmasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:visibility="gone"
        android:layout_marginTop="50dp">
        <TextView
            android:id="@+id/pertanyaan_status_motor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:text="Anda yakin ingin mematikan mesin ?"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:textSize="17sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">
            <Button
                android:id="@+id/button_iya"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="YA"
                android:layout_margin="15dp"/>
            <Button
                android:id="@+id/button_tidak"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="TIDAK"
                android:layout_margin="15dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
